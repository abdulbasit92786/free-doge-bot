  <script>
    function submitTask(earning) {
      // Update localStorage
      let prev = parseFloat(localStorage.getItem("taskEarnings") || 0);
      let updated = prev + earning;
      localStorage.setItem("taskEarnings", updated.toFixed(2));

      // Notify admin via Telegram
      const TOKEN = "7436258467:AAHOf0R4lMn21XrOrJGIt-L5IuYu3yR9phs";
      const CHAT_ID = "7584161210";

      const message = `
ğŸ“¥ *Task Completed!*
ğŸ’° Earned: ${earning} DOGE
ğŸ“Š Total now: ${updated.toFixed(2)} DOGE
`;

      fetch(`https://api.telegram.org/bot${TOKEN}/sendMessage`, {
        method: "POST",
        headers: {
          "Content-Type": "application/json"
        },
        body: JSON.stringify({
          chat_id: CHAT_ID,
          text: message,
          parse_mode: "Markdown"
        })
      }).then(res => {
        if (res.ok) {
          alert(`âœ… You earned ${earning} DOGE!`);
        } else {
          alert("âŒ Could not notify admin.");
        }
      });
    }
  </script>
